# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://aiinpocket:aiinpocket_secure_password@postgres:5432/aiinpocket
REDIS_URL=redis://redis:6379/0

# ===========================================
# LLM Provider Configuration
# ===========================================
# Choose ONE of the following LLM providers:

# Option 1: OpenAI (GPT-4, GPT-3.5-turbo)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
# Available models: gpt-4, gpt-4-turbo, gpt-3.5-turbo

# Option 2: Anthropic Claude (Uncomment to use)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-3-opus-20240229
# Available models: claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307

# Option 3: Google Gemini (Uncomment to use)
# GOOGLE_API_KEY=your_google_api_key_here
# GEMINI_MODEL=gemini-pro
# Available models: gemini-pro, gemini-pro-vision

# Option 4: Local LLM via Ollama (Uncomment to use)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2
# Available models: llama2, mistral, codellama, etc.

# Option 5: Azure OpenAI (Uncomment to use)
# AZURE_OPENAI_API_KEY=your_azure_api_key_here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT=your-deployment-name
# AZURE_API_VERSION=2024-02-15-preview

# ===========================================
# Application Settings
# ===========================================
APP_NAME=AI Website Generator
APP_VERSION=1.0.0
DEBUG=True

# CORS Settings
CORS_ORIGINS=http://localhost:8000,http://localhost:3000,http://localhost:80

# ===========================================
# Security Settings
# ===========================================
# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-change-in-production

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ===========================================
# Email Configuration (Optional)
# ===========================================
# For sending generated website links to users
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourapp.com

# ===========================================
# File Storage
# ===========================================
# Maximum file size for uploads (in MB)
MAX_UPLOAD_SIZE_MB=10

# Generated sites storage path
GENERATED_SITES_PATH=/app/generated_sites

# ===========================================
# Feature Flags
# ===========================================
# Enable/disable AI chat assistant
ENABLE_AI_CHAT=True

# Enable/disable user authentication
ENABLE_AUTH=False

# Enable/disable email delivery
ENABLE_EMAIL=False

# ===========================================
# Monitoring (Optional)
# ===========================================
# Sentry DSN for error tracking
# SENTRY_DSN=your-sentry-dsn-here

# Application Insights (Azure)
# APPINSIGHTS_INSTRUMENTATION_KEY=your-key-here
